{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,

		"plugins": [{ "name": "typescript-plugin-css-modules" }],

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
